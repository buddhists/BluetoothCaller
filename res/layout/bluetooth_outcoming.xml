<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="蓝牙电话"
        android:textColor="#7FB8EE"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_weight="1" 
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center" >
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="40dp"
	            android:layout_marginRight="40dp"
	            android:background="@drawable/icon_circle"
	            android:contentDescription="@string/hello_world"
	            android:padding="40dp"
	            android:src="@drawable/icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                android:text="@string/bluetooth_outgoing_call"
                android:textColor="#1375D8"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/outgoing_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="2"
                android:text=""
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />
            <TextView
                android:id="@+id/outgoing_phone_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="35sp" />
	        <Button
	            android:id="@+id/outgoing_hang_up_btn"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="2"
	            android:layout_marginTop="20dp"
	            android:background="@drawable/btn_end_call" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>